<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <title>–ú—ñ–π –ë–ª–æ–≥</title>
    <style>
        /* 1. –ù–∞–ª–∞—à—Ç—É–≤–∞–Ω–Ω—è –∫–æ–ª—å–æ—Ä—ñ–≤ —á–µ—Ä–µ–∑ –∑–º—ñ–Ω–Ω—ñ */
        :root {
            --bg-color: #ffffff;
            --text-color: #333333;
            --card-bg: #f9f9f9;
            --border-color: #ddd;
            --btn-bg: #007BFF;
            --btn-text: #fff;
        }

        /* –ö–ª–∞—Å –¥–ª—è —Ç–µ–º–Ω–æ—ó —Ç–µ–º–∏ */
        .dark-mode {
            --bg-color: #1a1a1a;
            --text-color: #f0f0f0;
            --card-bg: #2d2d2d;
            --border-color: #444;
            --btn-bg: #0056b3;
        }

        body {
            font-family: sans-serif;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            /* –í–∏–∫–æ—Ä–∏—Å—Ç–æ–≤—É—î–º–æ –∑–º—ñ–Ω–Ω—ñ */
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: background-color 0.3s, color 0.3s; /* –ü–ª–∞–≤–Ω–∏–π –ø–µ—Ä–µ—Ö—ñ–¥ */
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 10px;
        }

        .post {
            border: 1px solid var(--border-color);
            background-color: var(--card-bg);
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
        }

        .btn {
            background: var(--btn-bg);
            color: var(--btn-text);
            padding: 10px 15px;
            text-decoration: none;
            display: inline-block;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

        /* –ö–Ω–æ–ø–∫–∞ –∑–º—ñ–Ω–∏ —Ç–µ–º–∏ */
        #theme-toggle {
            background: transparent;
            border: 1px solid var(--text-color);
            color: var(--text-color);
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <nav>
        <h1>–í—Å—ñ –ø–æ—Å—Ç–∏</h1>
        <div>
            <button id="theme-toggle">üåô</button>
            <a href="/add-post" class="btn">‚ûï –î–æ–¥–∞—Ç–∏ –ø–æ—Å—Ç</a>
        </div>
    </nav>

    <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div class="post">
                <h3><%= post.title %></h3>
                <small>–ê–≤—Ç–æ—Ä: <%= post.author %></small>
                <p><%= post.description %></p>
            </div>
        <% }) %>
    <% } else { %>
        <p>–ü–æ—Å—Ç—ñ–≤ —â–µ –Ω–µ–º–∞—î...</p>
    <% } %>

    <script>
        // –ó–Ω–∞—Ö–æ–¥–∏–º–æ –∫–Ω–æ–ø–∫—É —ñ —Ç—ñ–ª–æ —Å—Ç–æ—Ä—ñ–Ω–∫–∏
        const toggleBtn = document.getElementById('theme-toggle');
        const body = document.body;

        // –ü–µ—Ä–µ–≤—ñ—Ä—è—î–º–æ, —á–∏ —î –∑–±–µ—Ä–µ–∂–µ–Ω–∞ —Ç–µ–º–∞ –≤ –ø–∞–º'—è—Ç—ñ
        const currentTheme = localStorage.getItem('theme');
        if (currentTheme === 'dark') {
            body.classList.add('dark-mode');
            toggleBtn.textContent = '‚òÄÔ∏è';
        }

        // –°–ª—É—Ö–∞—î–º–æ –∫–ª—ñ–∫ –ø–æ –∫–Ω–æ–ø—Ü—ñ
        toggleBtn.addEventListener('click', () => {
            body.classList.toggle('dark-mode');

            // –ó–º—ñ–Ω—é—î–º–æ —ñ–∫–æ–Ω–∫—É —ñ –∑–±–µ—Ä—ñ–≥–∞—î–º–æ –≤–∏–±—ñ—Ä
            if (body.classList.contains('dark-mode')) {
                toggleBtn.textContent = '‚òÄÔ∏è';
                localStorage.setItem('theme', 'dark');
            } else {
                toggleBtn.textContent = 'üåô';
                localStorage.setItem('theme', 'light');
            }
        });
    </script>
</body>
</html>